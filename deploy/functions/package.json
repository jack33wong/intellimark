{
  "name": "intellimark-chat-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend for Intellimark Chat application",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation nodemon --exec tsx --tsconfig tsconfig.dev.json server.ts",
    "build": "tsc --project tsconfig.json --noEmitOnError false --skipLibCheck",
    "build:clean": "rm -rf dist && npm run build",
    "build:deploy": "node build-for-deploy.cjs",
    "copy:assets": "cp -r config/*.json dist/config/ 2>/dev/null || true && cp -r *.json dist/ 2>/dev/null || true",
    "build:watch": "tsc --watch --project tsconfig.json",
    "test": "jest",
    "type-check": "tsc --noEmit --project tsconfig.dev.json",
    "deploy:prepare": "npm run build:deploy"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.test.ts"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.11.3",
    "@grpc/proto-loader": "^0.8.0",
    "@types/express": "^5.0.3",
    "@types/stripe": "^8.0.416",
    "@types/uuid": "^10.0.0",
    "canvas": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^13.5.0",
    "google-gax": "^5.0.3",
    "helmet": "^7.1.0",
    "sharp": "^0.34.3",
    "stripe": "^18.5.0",
    "typescript": "^5.9.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "keywords": [
    "backend",
    "api",
    "chat"
  ],
  "author": "",
  "license": "MIT"
}
