{
  "name": "intellimark-chat-backend",
  "version": "1.0.0",
  "description": "Backend for Intellimark Chat application",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "NODE_OPTIONS='--no-deprecation' nodemon --exec ts-node server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.test.ts"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.0",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^13.5.0",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "sharp": "^0.34.3",
    "typescript": "^5.9.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2"
  },
  "keywords": [
    "backend",
    "api",
    "chat"
  ],
  "author": "",
  "license": "MIT"
}
