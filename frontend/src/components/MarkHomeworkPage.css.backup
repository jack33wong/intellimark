.chat-input:focus {
  outline: none;
  border-color: var(--accent-color);
  box-shadow: 0 0 0 3px rgba(127, 0, 255, 0.1);
}

.chat-input:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}


/* Responsive Design for Refactored Components */
@media (max-width: 768px) {
  .preview-actions {
    gap: 12px;
  }
  
  .model-select {
    min-width: 150px;
  }
  
  .analyze-btn {
    padding: 10px 20px;
    font-size: 14px;
  }
  
  .clear-preview-btn {
    width: 28px;
    height: 28px;
    font-size: 16px;
  }
  
  .mark-homework-page.upload-mode {
    padding: 10px;
  }
  
  .mark-homework-page.chat-mode .session-header {
    padding: 12px 16px;
  }
}


